generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  subtitle    String?
  description String
  category    Category
  material    Material
  warmth      Warmth?
  color       String?
  pattern     Pattern?
  price       Int      // в копейках
  currency    String   @default("RUB")
  sizes       Size[]
  images      Image[]
  ecoTags     EcoTag[]
  rating      Float    @default(0)
  reviews     Review[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Image {
  id        String  @id @default(cuid())
  url       String
  alt       String?
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
}

model Size {
  id        String  @id @default(cuid())
  label     String
  inStock   Int     @default(0)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
}

model Review {
  id        String   @id @default(cuid())
  author    String
  body      String
  stars     Int      @default(5)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  createdAt DateTime @default(now())
}

enum Category {
  BLANKET
  SHOPPER
}

enum Material {
  LINEN
  COTTON
  WOOL
  BAMBOO
  RECYCLED
  NETTLE
  MUSLIN
  FLANNEL
}

enum Warmth {
  LIGHT
  MEDIUM
  WARM
}

enum Pattern {
  SOLID
  STRIPED
  CHECKERED
  GEOMETRIC
  FLORAL
}

enum EcoTag {
  HANDMADE
  NATURAL_DYES
  SMALL_BATCH
  ZERO_PLASTIC_PACKAGING
  ORGANIC
  RECYCLED_MATERIALS
  LOCAL_PRODUCTION
}

